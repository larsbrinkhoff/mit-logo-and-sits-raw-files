	TITLE ECHO


IN==0
OUT==1

START:	SETZM NCH
	.OPEN IN,[SIXBIT /  $T15/]	;OPEN IMAGE MODE INPUT
	JRST TRYTTY
	.OPEN OUT,[SIXBIT /  AT15/]	;OPEN SUPER-IMAGE MODE OUTPUT
	.VALUE
LOOP:	.IOT IN,1
	ANDI 1,177	;MASK OUT PARITY
	SOSN 1	;IF IF A ONE WAS SENT
	SETZM NCH	;RESET NCH
	AOS 1
	.IOT OUT,1
	AOJA NCH,LOOP
TRYTTY:	.OPEN IN,[SIXBIT /  $TTY/]
	.VALUE
	.OPEN OUT,[SIXBIT /  ATTY/]
	.VALUE
	JRST LOOP

NCH=2

	END START

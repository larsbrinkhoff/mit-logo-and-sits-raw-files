170 SHRINKSQ (-100) 0 200 56
180 SHRINKSQ 100 0 200 56
185 PENUP
190 ERASERUP SETXY (- (25 + :CD)) 25 ERASERDOWN DELY -50
195 ERASERUP SETX (:CD + 25) ERASERDOWN DELY 50
200 ERASERUP SETX :CD - 25 PENDOWN PENCOLOR 'GREEN DELY -50
205 PENUP SETX 25 - :CD PENDOWN PENCOLOR 'RED DELY 50
210 PENUP MAKE 'CD :CD - 1
220 IF :CD > 20 THEN GO 190
END

TO SHRINKSQ :XC :YC :OSIDE :NSIDE
20 ERASERUP SETXY (:XC + (:OSIDE / 2)) (:YC + (:OSIDE / 2))
30 ERASERDOWN DELX (- :OSIDE) DELY (- :OSIDE) DELX :OSIDE DELY :OSIDE
40 MAKE 'OSIDE :OSIDE - 2
45 DELXY -1 (-1)
50 IF :OSIDE > :NSIDE THEN GO 30
END

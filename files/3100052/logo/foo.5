
MAKE 'S 'E
MAKE 'L 'E
MAKE 'C 'E
MAKE 'X '141.421356
MAKE 'Y '70.710678

TO BLAZE
10 MAKE 'L :COLORS
20 MAKE 'S FIRST :L
30 MAKE 'L LPUT FIRST :COLORS BUTFIRST :COLORS
40 MAKE 'C FIRST :L
50 MAKE 'L LAST FIRST :L BUTFIRST :L
60 REPLACECOLOR :S :C
70 MAKE 'S :C
80 GO 40
END

TO R :X
10 OUTPUT (REMAINDER (INTEGER (RANDOM * 10000)) :X) + 1
END

TO ELEMENT :X :Y
10 IF :X = 1 THEN OUTPUT FIRST :Y
20 OUTPUT ELEMENT (:X - 1) BUTFIRST :Y
END

TO SQUARE :X
10 FORWARD :X RIGHT 90 FORWARD :X RIGHT 90 FORWARD :X RIGHT 90 FORWARD :X RIGHT 90
END

TO SIGN :X
10 PENUP FORWARD 2 * :X
20 LEFT 45 PENDOWN
30 SQUARE :X
40 PENUP RIGHT 45 FORWARD 5 SHADE
50 PENDOWN BACK 1 + 2 * :X
END

TO ART
10 PENUP SETXY 1000 * RANDOM 1000 * RANDOM
15 PENDOWN
17 PENCOLOR ELEMENT R 9 :COLORS
20 SQUARE RANDOM * 100
35 PENUP
40 GO 10
END

TO TRI :X
10 RIGHT 30 FORWARD :X RIGHT 120 FORWARD :X RIGHT 120 FORWARD :X RIGHT 90
END

TO SNOW :X :D
10 IF :D = 0 THEN FORWARD :X ELSE LEFT 90 SNOW :X / 2 :D - 1 RIGHT 90 SNOW :X / 2 :D - 1
END

TO BOARD
10 PENUP SETXY (-500) (-500)
15 MAKE 'C 0
20 DELX 125
30 PENDOWN FORWARD 1000 PENUP BACK 1000
40 MAKE 'C :C + 1
50 IF :C < 7 THEN GO 20
60 SETXY (-500) (-500)
70 RIGHT 90
80 DELY 125
90 PENDOWN FORWARD 1000 PENUP BACK 1000
100 MAKE 'C :C + 1
110 IF :C < 14 THEN GO 80
END

TO COLORSQ
10 PENUP SETXY (-500) (-500)
20 DELXY 62.5 62.5
30 SHADE
40 DELXY 125 125
50 GO 30
END

TO PICK :LIST :POS
10 IF :POS < 2 THEN OUTPUT FIRST :LIST
20 OUTPUT PICK (BUTFIRST :LIST) (:POS - 1)
END

TO DRAGON :LENGTH :LEVEL
10 DGON :LENGTH :LEVEL 'LEFT
END

TO DGON :LENGTH :LEVEL :DIR
5 PENCOLOR PICK :COLORS :LEVEL
10 IF :LEVEL = 0 THEN FORWARD :LENGTH STOP
20 DGON :LENGTH :LEVEL - 1 'LEFT
30 IF :DIR = 'LEFT THEN LEFT 90 ELSE RIGHT 90
40 DGON :LENGTH :LEVEL - 1 'RIGHT
END

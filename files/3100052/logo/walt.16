20 IF :CLENGTH = > :LENGTH STOP
END

TO DRAW
END

TO BEAME :LENGTH :WIDTH :INC
5 HIDETURTLE
10 REPEAT (:LENGTH / :INC) CHUNK
END

TO CHUNK
10 FORWARD :INC / 2
20 FILLBOX :INC :WIDTH :XCOR :YCOR
60 FORWARD :INC / 2
END

TO ANYFILL :LENGTH :WIDTH :XCOR :YCOR
10 PENUP SETXY (:XCOR - (:LENGTH / 2)) (:YCOR - (:WIDTH / 2)) PENDOWN
20 REPEAT (:WIDTH / 2) DELX :LENGTH DELY 1 DELX (- :LENGTH) DELY 1
END

TO UPBEAME :LENGTH :WIDTH :INC
10 HIDETURTLE
20 REPEAT (:LENGTH / :INC) UPCHUNK 
END

TO UPCHUNK
5 IF YCOR > :YSTOP STOP
10 FORWARD :INC / 2
20 FILLBOX :INC :WIDTH :XCOR :YCOR
30 LEFT 90
40 FORWARD :INC / 2
END

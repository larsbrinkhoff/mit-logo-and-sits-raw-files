ERPR:	BIC #170000,B		;CLEAR OUT THE TYPE
	BIS #UFUN,B		;MAKE IT INTO A UFUN
	CMP B,TOPRNM		;IS IT THE PROCEDURE BEING EDITED?
	BNE ERPR2		;NO, ALLOW IT TO HAPPEN

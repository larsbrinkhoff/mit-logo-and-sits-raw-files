	CLR C
	MOV 4 (P), D		;(1+ TVSIZX)
	JSR PC, DRAW		;Top line.
	MOV TVBOT, A
	INC A
	MOV (P), B		
	CLR C
	MOV 4 (P), D		;(1+ TVSIZX)
	JSR PC, DRAW		;Bottom line.

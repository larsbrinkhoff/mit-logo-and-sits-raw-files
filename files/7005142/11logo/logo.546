	BEQ MKFBD	;YES, JUST CONTINUE WITH NEXT BINDING
	BHI MKFBUG	;BUGGY IF WE ARE PAST IT
	ADD (E)+,E	;POINT TO THE START OF THE NEXT LINE
	ADD #4,D	;POINT TO THE START OF THE ELEMENTS FOR THIS LINE

	JSR PC,MARKF1	;MARK THE FIRST OF IT (THE WHOLE TOKEN)
	BR MKNTOK	;NEXT TOKEN
MKFBD:	SPOP E		;POINTER TO NEXT OBLIST ELEMENT
	SPOP C

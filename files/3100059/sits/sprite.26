.TITLE SPRITE: ATTEMPT TO WRITE THINGS ON SITS TVS
.INSRT SITS;SITMAC >
.INSRT SITS;SITSS SYMS
.INSRT GLD;UTILIT >
.BLKW
PDL:
XPOS:	100000
YPOS:	100000
XVEL:	00
YVEL:	0
XACC:	0
YACC:	0
DISCAP:	0
.=1000
BEGIN:	MOV #PDL,SP
	CREATE .DSCAP,#140002 ;CREATE DISPLAY CAPABILITY
	IFERR LOSE
	REST DISCAP
START:	ADD XVEL,XPOS
	ADD YVEL,YPOS
	JSR PC,DISPL
	JMP START
DISPL:	MOV XPOS,A
	MOV YPOS,B
.REPT 6
	ASR A
.ENDR
.REPT 6
	ASR B
.ENDR
	SAVE<A,B>
	SAVE DISCAP
	BIS #.TVDSS*400,(SP)
	.INVOK
	BNE WIN
	ADD #6,SP
	TYPE #TTYCAP,#CHOKE1
	BPT
WIN:	SAVE <1,1>
	SAVE DISCAP
	BIS #.TVDSX*400,(SP)
	.INVOK
	BNE WIN1
	ADD #6,P
	JMP LOSE
WIN1:	SLEEP #0,#50
	SAVE <-1,1>
	SAVE DISCAP
	BIS #.TVDSX*400,(SP)
	.INVOK
	BNE WIN2
	ADD #6,P
	JMP LOSE
WIN2:	RTS PC
LOSE:	TYPE #TTYCAP,#CHOKE
	BPT
CHOKE:	.ASCII /YOU LOSE/
CHOKE1:	.ASCII /CAN'T SET/
	.BYTE 15,0
	.EVEN

.END BEGIN
